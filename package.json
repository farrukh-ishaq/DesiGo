{
  "name": "medusa-ecommerce",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "src/backend",
    "src/frontend",
    "scripts"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:backend": "npm run dev --workspace=src/backend",
    "dev:frontend": "npm run dev --workspace=src/frontend",

    "build": "npm run build --workspaces --if-present",
    "build:backend": "npm run build --workspace=src/backend",
    "build:frontend": "npm run build --workspace=src/frontend",

    "test": "npm run test --workspaces --if-present",
    "test:backend": "npm run test --workspace=src/backend",
    "test:frontend": "npm run test --workspace=src/frontend",

    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",

    "docker:build": "npm run docker:build --workspaces --if-present",
    "docker:push": "npm run docker:push --workspaces --if-present",

    "deploy:local": "./scripts/deploy-local.sh",
    "deploy:cloud": "./scripts/deploy-cloud.sh",

    "db:migrate": "npm run db:migrate --workspace=src/backend",
    "db:seed": "npm run db:seed --workspace=src/backend",

    "type-check": "npm run type-check --workspaces --if-present",

    "clean": "rm -rf node_modules && npm run clean --workspaces --if-present",
    "reset": "npm run clean && npm install"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@9.0.0"
}
